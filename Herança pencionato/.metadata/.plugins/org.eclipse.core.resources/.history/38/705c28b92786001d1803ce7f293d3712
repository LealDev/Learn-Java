package matrizes;

public class Position {

	private double position;
	private Integer left, right, up, down;
	
	public Position(double position) {
		this.position = position;	
	}
	
	public int positions(double coluna, double linha) {
		
		
		
		return 3;
	}
	
	public double getPosition() {
		return position;
	}
	public void setPosition(double position) {
		this.position = position;
	}
	public int getLeft() {
		return left;
	}
	public void setLeft(int left) {
		this.left = left;
	}
	public int getRight() {
		return right;
	}
	public void setRight(int right) {
		this.right = right;
	}
	public int getUp() {
		return up;
	}
	public void setUp(int up) {
		this.up = up;
	}
	public int getDown() {
		return down;
	}
	public void setDown(int down) {
		this.down = down;
	}
	
	
	
	
}
